#include <stdio.h>
#include "taille_image.h"

int main() {
    char nomFichier[100];

    printf("=== Programme : Taille d’une image PPM ===\n");
    printf("Nom du fichier PPM : ");
    scanf("%s", nomFichier);

    Image *img = lirePPM(nomFichier);
    if (img) {
        afficherTaille(img);
        libererImage(img);
    } else {
        printf("❌ Impossible de charger l’image.\n");
    }

    return 0;
}
